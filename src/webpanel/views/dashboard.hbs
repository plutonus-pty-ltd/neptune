
<p>Logged in as {{user.username}}#{{user.discriminator}}</p>
<div class="row">
	{{#if guilds}}
		{{#each guilds}}
			<div class="col-xl-4 grid-margin stretch-card">
				<div class="card-body bg-gray-dark">
					<div class="row">
						<div class="col-9">
							<div class="d-flex align-items-center align-self-start">
								<h4 class="mb-0">
									{{this.name}}
								</h4>
							</div>
						</div>
						<div class="col-3">
							<img width="50px" height="50px" class="rounded-circle" src="{{this.icon}}" />
						</div>
					</div>
					<a class="text-white btn btn-success btn-rounded" href="/dashboard/{{this.id}}">Manage</a>
				</div>
			</div>
		{{/each}}
	{{else}}
		<div class="col-xl-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<div class="col-9">
							<div class="d-flex align-items-center align-self-start">
								<h4 class="mb-0">
									No Servers Found
								</h4>
								<p class="text-danger ml-2 mb-0 font-weight-medium">
									Add Neptune to your server <a href="/add">here!</a>
								</p>
							</div>
						</div>
						<div class="col-3">
							<div class="icon icon-box-danger">
								<h3 class="icon-item">!</h3>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{{/if}}
</div>
		
